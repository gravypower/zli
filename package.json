{
  "name": "@gravypower/zli",
  "version": "0.0.9",
  "description": "A CLI tool built with Bun and TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "require": {
        "types": "./src/zli/index.d.ts",
        "default": "./src/zli/index.js"
      }
    },
    "./zod": {
      "require": {
        "types": "./src/zod/index.d.t",
        "default": "./src/zod/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "release": "standard-version && tsc && npm publish"
  },
  "keywords": [
    "cli",
    "zod",
    "typescript"
  ],
  "author": "Aaron Job",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/sinon": "^17.0.3",
    "sinon": "^19.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "effect": "^3.7.3",
    "zod": "^3.23.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gravypower/zli.git"
  }
}
